#!/bin/sh

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
NC='\033[0m'

echo -e "${YELLOW}Running pre-commit checks...${NC}"

# Check TypeScript compilation
echo "Checking TypeScript compilation..."
yarn tsc --noEmit
if [ $? -ne 0 ]; then
    echo -e "${RED}TypeScript check failed${NC}"
    exit 1
fi

# Run linter
echo "Running linter..."
yarn lint
if [ $? -ne 0 ]; then
    echo -e "${RED}Linter check failed${NC}"
    exit 1
fi

# Run tests
echo "Running tests..."
yarn test
if [ $? -ne 0 ]; then
    echo -e "${RED}Tests failed${NC}"
    exit 1
fi

# Check for sensitive data
echo "Checking for sensitive data..."
if git diff --cached | grep -i "private.*key\|secret\|password\|apikey"; then
    echo -e "${RED}Warning: Possible sensitive data detected${NC}"
    exit 1
fi

echo -e "${GREEN}All checks passed!${NC}"
exit 0